        .server-card p {
            opacity: 0.9;
            line-height: 1.6;
            color: #cd5c5c;
        }

        .server-info {
            background: rgba(10, 0, 0, 0.6);
            padding: 1rem;
            border-radius: 10px;
            margin: 1rem 0;
            border-left: 4px solid #dc1414;
            box-shadow: inset 0 0 10px rgba(220, 20, 20, 0.2);
        }

        .server-info code {
            background: rgba(220, 20, 20, 0.3);
            padding: 0.3rem 0.6rem;
