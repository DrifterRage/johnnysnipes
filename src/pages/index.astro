            background: linear-gradient(45deg, rgba(220, 20, 20, 0.1), rgba(139, 0, 0, 0.1));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .store-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(220, 20, 20, 0.4);
            border-color: rgba(220, 20, 20, 0.6);
            background: rgba(26, 0, 0, 0.9);
        }

        .store-item:hover::before {
            opacity: 1;
        }

        .store-item i {
            font-size: 4rem;
            color: #dc1414;
            margin-bottom: 1rem;
            display: block;
            text-shadow: 0 0 20px rgba(220, 20, 20, 0.5);
        }

        .store-item h3 {
            font-size: 1.3rem;
            margin-bottom: 1rem;
            color: #e0e0e0;
            text-shadow: 0 0 10px rgba(220, 20, 20, 0.3);
        }

        .store-item .price {
            font-size: 2rem;
            font-weight: bold;
            color: #ff6b6b;
            margin: 1rem 0;
            text-shadow: 0 0 15px rgba(220, 20, 20, 0.5);
        }

        .store-item .description {
            opacity: 0.9;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            color: #cd5c5c;
        }

        .buy-btn {
            background: linear-gradient(45deg, #dc1414, #b30000);
            color: #fff;
            padding: 0.8rem 2rem;
            border: 2px solid rgba(220, 20, 20, 0.3);
            border-radius: 25px;
            font-weight: 600;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .buy-btn:hover {
            background: linear-gradient(45deg, #b30000, #8b0000);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(220, 20, 20, 0.5);
            border-color: rgba(220, 20, 20, 0.6);
        }

        .coming-soon {
            background: rgba(26, 0, 0, 0.5);
            color: #666;
            cursor: not-allowed;
            border-color: rgba(102, 102, 102, 0.3);
        }

        .coming-soon:hover {
            transform: none;
            box-shadow: none;
            background: rgba(26, 0, 0, 0.5);
        }

        /* Staff Cards */
        .staff-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .staff-card {
            background: rgba(26, 0, 0, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2rem;
            border: 2px solid rgba(220, 20, 20, 0.3);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .staff-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(220, 20, 20, 0.1), rgba(139, 0, 0, 0.1));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .staff-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(220, 20, 20, 0.4);
            border-color: rgba(220, 20, 20, 0.6);
            background: rgba(26, 0, 0, 0.9);
        }

        .staff-card:hover::before {
            opacity: 1;
        }

        .staff-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(45deg, #dc1414, #b30000);
