            box-shadow: 0 20px 50px rgba(114, 137, 218, 0.5);
            border-color: rgba(114, 137, 218, 0.6);
        }

        .youtube-btn {
            background: linear-gradient(45deg, #dc1414, #b30000);
            color: #fff;
            box-shadow: 0 10px 30px rgba(220, 20, 20, 0.3);
            border-color: rgba(220, 20, 20, 0.3);
        }

        .youtube-btn:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 20px 50px rgba(220, 20, 20, 0.5);
            border-color: rgba(220, 20, 20, 0.6);
        }

        .social-btn i {
            font-size: 3rem;
            margin-bottom: 1rem;
            display: block;
            text-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }

        .social-btn h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        /* Store Items */
        .store-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .store-item {
            background: rgba(26, 0, 0, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2rem;
            border: 2px solid rgba(220, 20, 20, 0.3);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .store-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
