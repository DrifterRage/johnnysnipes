        .staff-bio {
            opacity: 0.9;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            color: #cd5c5c;
        }

        .owner-badge {
            background: linear-gradient(45deg, #dc1414, #b30000);
            color: #fff;
            padding: 0.3rem 1rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: bold;
            margin-bottom: 1rem;
            display: inline-block;
            border: 1px solid rgba(220, 20, 20, 0.3);
            box-shadow: 0 0 15px rgba(220, 20, 20, 0.3);
        }

