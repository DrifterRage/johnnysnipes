        .server-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(220, 20, 20, 0.4);
            border-color: rgba(220, 20, 20, 0.6);
            background: rgba(26, 0, 0, 0.9);
        }

        .server-card:hover::before {
            opacity: 1;
        }

        .server-card i {
            font-size: 3rem;
            color: #dc1414;
            margin-bottom: 1rem;
            display: block;
            text-shadow: 0 0 20px rgba(220, 20, 20, 0.5);
        }

        .server-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #e0e0e0;
            text-shadow: 0 0 10px rgba(220, 20, 20, 0.3);
